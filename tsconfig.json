{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@blobverse/*": ["packages/*/src"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
} 